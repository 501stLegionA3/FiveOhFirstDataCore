<thead class="table-primary text-center">
    <tr>
        <th colspan="4">
            Deck Officer - Wardens
        </th>
    </tr>
</thead>
<tbody>
<tr>
    <th scope="row" colspan="2" class="text-end">
        Master Warden
    </th>
    <td scope="row" colspan="2">
        @(Warden.Master?.WarrantRank is null ? Warden.Master?.WardenRank?.AsFull() + " " ?? "" : Warden.Master?.WarrantRank?.AsFull() + " " ?? "")@(Warden.Master?.NickName ?? "TBD")
    </td>
</tr>
<tr>
    <th scope="row" colspan="2" class="text-end">
        Chief Warden
    </th>
    <td scope="row" colspan="2">
        @(Warden.Chief?.WarrantRank is null ? Warden.Chief?.WardenRank?.AsFull() + " " ?? "" : Warden.Chief?.WarrantRank?.AsFull() + " " ?? "")@(Warden.Chief?.NickName ?? "TBD")
    </td>
</tr>

@for(int i = 0; i < Warden.Wardens.Length; i++)
{
        var c = i + 1;
        <tr>
        <th scope="row" colspan="2" class="text-end">
            Section Lead (@c-1)
        </th>
        <td scope="row" colspan="2">
            @(Warden.Wardens[i].SectionLead?.WarrantRank is null ? Warden.Wardens[i].SectionLead?.WardenRank?.AsFull() + " " ?? "" : Warden.Wardens[i].SectionLead?.WarrantRank?.AsFull() + " " ?? "")@(Warden.Wardens[i].SectionLead?.NickName ?? "TBD")
        </td>
    </tr>
    <tr>
        <th scope="row" colspan="2" class="text-end">
            Warden @c-2
        </th>
        <td scope="row" colspan="2">
            @(Warden.Wardens[i].WardenTwo?.WarrantRank is null ? Warden.Wardens[i].WardenTwo?.WardenRank?.AsFull() + " " ?? "" : Warden.Wardens[i].WardenTwo?.WarrantRank?.AsFull() + " " ?? "")@(Warden.Wardens[i].WardenTwo?.NickName ?? "TBD")
        </td>
    </tr>
    <tr>
        <th scope="row" colspan="2" class="text-end">
            Warden @c-3
        </th>
        <td scope="row" colspan="2">
            @(Warden.Wardens[i].WardenThree?.WarrantRank is null ? Warden.Wardens[i].WardenThree?.WardenRank?.AsFull() + " " ?? "" : Warden.Wardens[i].WardenThree?.WarrantRank?.AsFull() + " " ?? "")@(Warden.Wardens[i].WardenThree?.NickName ?? "TBD")
        </td>
    </tr>
}

</tbody>

@code {
    [Parameter]
    public WardenData Warden {get;set;}
}
