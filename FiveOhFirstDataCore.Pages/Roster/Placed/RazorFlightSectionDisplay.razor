@inherits RosterModel

<thead class="table-primary text-center">
    <tr>
        <th colspan="4">
            @SectionNumber.AsOrdinal() Section, Razor @FlightNumber-@SectionNumber
        </th>
    </tr>
</thead>
<tbody>
    <tr role="@(Section.Alpha is null ? "" : "button")" @onclick="(x) => TrooperNav(Section.Alpha?.Id)">
        <th scope="row" class="text-end" colspan="2">
            Pilot (@($"{SectionNumber}A"))
        </th>
        <td class="text-start" colspan="2">
            @(Section.Alpha?.DisplayRankName() ?? "TBD")
        </td>
    </tr>
    <tr role="@(Section.Bravo is null ? "" : "button")" @onclick="(x) => TrooperNav(Section.Bravo?.Id)">
        <th scope="row" class="text-end" colspan="2">
            Pilot (@($"{SectionNumber}B"))
        </th>
        <td class="text-start" colspan="2">
            @(Section.Bravo?.DisplayRankName() ?? "TBD")
        </td>
    </tr>
    <tr role="@(Section.Charlie is null ? "" : "button")" @onclick="(x) => TrooperNav(Section.Charlie?.Id)">
        <th scope="row" class="text-end" colspan="2">
            Pilot (@($"{SectionNumber}C"))
        </th>
        <td class="text-start" colspan="2">
            @(Section.Charlie?.DisplayRankName() ?? "TBD")
        </td>
    </tr>
    <tr role="@(Section.Delta is null ? "" : "button")" @onclick="(x) => TrooperNav(Section.Delta?.Id)">
        <th scope="row" class="text-end" colspan="2">
            Pilot (@($"{SectionNumber}D"))
        </th>
        <td class="text-start" colspan="2">
            @(Section.Delta?.DisplayRankName() ?? "TBD")
        </td>
    </tr>
</tbody>

@code {
    [Parameter]
    public RazorSectionData Section {get;set;}
    [Parameter]
    public int FlightNumber {get;set;}
    [Parameter]
    public int SectionNumber {get;set;}
}
