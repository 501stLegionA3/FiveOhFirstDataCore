<thead class="bg-primary text-light text-center">
    <tr>
        <th colspan="4">
            501st Legion, Razor Squadron
        </th>
    </tr>
    <tr>
        <th colspan="4">
            Squadron Headquarters
        </th>
    </tr>
</thead>
<tbody>
    <tr>
        <th scope="row" class="text-end" colspan="2">
            Squadron Commander
        </th>
        <td class="text-start" colspan="2">
            @(Razor.Commander?.WarrantRank is null ? Razor.Commander?.PilotRank?.AsFull() + " " ?? "" : Razor.Commander.WarrantRank?.AsFull() + " " ?? "")@(Razor.Commander?.NickName ?? "TBD")
        </td>
    </tr>
    <tr>
        <th scope="row" class="text-end" colspan="2">
            Squadron Sub-Commander
        </th>
        <td class="text-start" colspan="2">
            @(Razor.SubCommander?.WarrantRank is null ? Razor.SubCommander?.PilotRank?.AsFull() + " " ?? "" : Razor.SubCommander.WarrantRank?.AsFull() + " " ?? "")@(Razor.SubCommander?.NickName ?? "TBD")
        </td>
    </tr>
    <tr>
        <th scope="row" class="text-end" colspan="2">
            Squadron FOIC
        </th>
        <td class="text-start" colspan="2">
            @(Razor.FOIC?.WarrantRank is null ? Razor.FOIC?.PilotRank?.AsFull() + " " ?? "" : Razor.FOIC.WarrantRank?.AsFull() + " " ?? "")@(Razor.FOIC?.NickName ?? "TBD")
        </td>
    </tr>
</tbody>

@for(int i = 0; i < Razor.Flights.Length; i++)
{
    <RazorFlightDisplay Flight="Razor.Flights[i]" FlightNumber="i + 1" />
}

<WardenDisplay Warden="Razor.Warden" />

@code {
    [Parameter]
    public RazorSquadronData Razor { get; set; }
}
