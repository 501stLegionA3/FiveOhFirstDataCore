<thead class="bg-primary text-light text-center">
    <tr>
        <th colspan="8">
            501st Legion, 1st Regiment, 3rd Battalion
        </th>
    </tr>
    <tr>
        <th colspan="8">
            @Name Company
        </th>
    </tr>
</thead>
@if (!Airborne)
{
    <CompanyStaff Company="Company" />
}

<CascadingValue Value="@Name" Name="CompanyName">
    <CascadingValue Value="Airborne" Name="Airborne">
        @for(int i = 0; i < Company.Platoons.Length; i++)
        {
            <PlatoonDisplay Platoon="Company.Platoons[i]" Number="i + 1" Adjutant="Adjutant" />
        }
    </CascadingValue>
</CascadingValue>
