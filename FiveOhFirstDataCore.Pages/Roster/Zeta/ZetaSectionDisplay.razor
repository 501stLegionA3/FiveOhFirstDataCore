@inherits RosterModel

<thead class="bg-dark text-light text-center">
    <tr>
        <th colspan="2">
            501st Legion, 1st Regiment, 3rd Battalion, Company Z "Reserves"
        </th>
    </tr>
    <tr>
        <th colspan="2">
            @Number.AsOrdinal() Section
        </th>
    </tr>
</thead>
<tbody>
<tr class="table-warning" role="@(Section.Commander is null ? "" : "button")" @onclick="(x) => TrooperNav(Section.Commander?.BirthNumber)">
    <th scope="row" class="text-end">
        Section Commander
    </th>
    <td class="text-start">
        @if (Section.Commander is null)
        {
            <span>TBD</span>
        }
        else
        {
            @Section.Commander.DisplayRankName()                
        }
    </td>
</tr>
<tr class="table-warning" role="@(Section.Subordinate is null ? "" : "button")" @onclick="(x) => TrooperNav(Section.Subordinate?.BirthNumber)">
    <th scope="row" class="text-end">
        Section Subordinate
    </th>
    <td class="text-start">
        @if (Section.Subordinate is null)
        {
            <span>TBD</span>
        }
        else
        {
            @Section.Subordinate.DisplayRankName()                
        }
    </td>
</tr>
</tbody>

@for(int i = 0; i < Section.Squads.Length; i++)
{
    <ZetaSquadDisplay Squad="Section.Squads[i]" Number="i + 1" />
}

@code {
    [Parameter]
    public ZetaSectionData Section { get; set; }
    [Parameter]
    public int Number { get; set; }
}
