<div class="mx-auto py-6 sm:px-6 lg:px-8 inset-0 h-screen">
    <div class="px-4 py-6 sm:px-0 columns-3 grid gap-3 grid-rows-1 gird-cols-1 h-full">
        <div class="border-4 border-dashed border-gray-200 rounded-lg h-full w-full">
            <div class="grid grid-cols-3 grid-rows-3 place-items-center gap-4 h-full">
                <div></div>
                <div></div>
                <div></div>

                <div></div>
                <div class="relative w-16 h-16 sm:w-32 sm:h-32">
                    <EditForm Model="this">
                        <InputSelect class="absolute w-full inset-x-0 top-0 p-2 bg-pink-300 rounded-lg valid" @bind-Value="ComponentTypeIndex">
