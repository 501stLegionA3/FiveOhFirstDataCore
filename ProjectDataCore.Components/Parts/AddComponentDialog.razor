                    </EditForm>
                    <button class="absolute w-full inset-x-0 bottom-0 p-2 bg-pink-300 rounded-lg" @onclick="OnAddComponentAsync">
                        Add Component
                    </button>
                </div>
                <div></div>

                <div></div>
